function jestWatchActiveProjectFile {
    clear
    activeProjectFileName=$(findActiveProjectFileName)

    if [ -z ${activeProjectFileName} ]; then
      echo "Not Found IDE"
    else
      echo "Watching: ${activeProjectFileName}"
      npx jest --watch --verbose -- -p ${activeProjectFileName}
    fi
}

